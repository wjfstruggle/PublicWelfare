.map_container {
  position: absolute;
  top: 0;
  bottom: 80px;
  left: 0;
  right: 0;
}

.map {
  width: 100%;
  height: 100%;
}

.map_text {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 80px;
  background: #fff;
  padding: 0 15px;
}

.address-box {
  margin: 12px 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  
}
.address-box text {
  margin: 5px 0;
  font-size: 12px;
}

.address-box .address {
  margin: 5px 6px 5px 4px;
}

.address-box .name {
  color: #B1B1B1;
}