.publishMsg {
    padding: 0 10px;
    overflow: hidden;
}

.detailaddr {
    display: flex;
    align-items: center;
    margin: 10px 0;
}

.detailaddr .icon {
    width: 25px;
    height: 25px;
    margin-right: 4px;
}

.detailaddr .detailaddr-h1 {
    font-size: 20px;
}

.detailaddr .inputAddr {
    border:2px solid #07C160;
    width: 100%;
    height: 35px;
    line-height: 35px;
    outline: none;
    padding-left: 8px;
    font-size: 28rpx;
    border-radius: 5px;
}
.wcdesc {
    width: 100%;
}

.wcdesc textarea {
    border:2px solid #07C160;
    outline: none;
    width: 80%;
    height: 220rpx;
    padding-left: 8px;
    padding-top: 8px;
    font-size: 28rpx;
    resize: none;
    margin: 0 auto;
    border-radius: 5px;
}

.types {
    margin-top: 10px;
}
.types .wctypes{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom:10px;
}
.types .wctypes image {
    width: 20px;
    height: 20px;
    margin-right: 6px;
}
.types label {
    font-size: 14px;
}
.types .wctypes text {
    color: #DDAF59;
    font-size: 30rpx;
}
.img-box {
    width: 100%;
    height: 300rpx;
    white-space: nowrap;
}
.img-box .img-item{
    display: inline-block;
    height: auto;
    margin-right: 10px;
    margin-top: 10px;
    width: 300rpx;
}
.img-box .img-item image {
    height: 300rpx;
    width: 290rpx;
}
.addImg,.submit-btn{
    width: 280rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #409EFF;
    text-align: center;
    border-radius: 40rpx;
    margin: 15px auto;
}
.info{
    font-size: 12px;
    color:#F56C6C;
    text-align: center;
}
.submit-btn {
    background-color: #67C23A;
}
.isSubmit {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #fff;
    z-index: 10;
}
.success-text{
    font-size: 40rpx;
    margin: 15px 0;
}
.success-btn{
    background-color:#07C160;
    color: white; 
    font-weight: bold;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    margin-top: 80px;
}